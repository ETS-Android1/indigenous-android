    <string name="pref_key_location_visibility_title">Location visibility</string>
    <string name="pref_key_location_visibility_summary">When location is found, show a select widget that allows you to send the location visibility. Only supported right now by the Wordpress endpoint.</string>
    <string name="pref_key_tags_list_title">Category list</string>
    <string name="pref_key_tags_list_summary">Get a list of categories from your endpoint for autocompletion. They will be saved so they can be used offline as well. Leave disabled if your endpoint does not support the ?q=category query.</string>
    <string name="pref_key_post_type_hide_title">Hide post types</string>
    <string name="pref_key_post_type_hide_summary">Hide post types in the menu which are not supported or enabled by your Micropub endpoint. If your server does not send post types in the configuration response, all post types will be shown.</string>

    <!-- Preferences: Media handling -->
    <string name="pref_category_media_title">Media</string>
    <string name="pref_category_media_summary">Control image and video settings for uploading or in the reader.</string>
    <string name="pref_key_video_autoplay_title">Video autoplay</string>
    <string name="pref_key_image_preview_title">Image preview</string>
    <string name="pref_key_image_preview_summary">Show the first image per post in the reader. If you choose to hide, you can still view the images attached to the post by clicking on the images information at the bottom of the post.</string>
    <string name="pref_key_image_scale_title">Scale images on upload</string>
    <string name="pref_key_image_scale_summary">Scale images when uploading. This results in smaller and faster uploads, but removes Exif data.</string>
    <string name="pref_key_image_quality_title">Image upload quality</string>
    <string name="pref_key_image_quality_summary">Define the quality for image manipulations. Ranges from 0 to 100. Higher values mean better image quality but bigger files.</string>
    <string name="pref_key_image_size_title">Image upload size</string>
    <string name="pref_key_image_size_summary">Maximum image size in width. In case the preview keeps blank, set the default size lower as this indicates the phone has ran out of memory.</string>
    <string name="pref_key_media_name_title">Add name to upload</string>
    <string name="pref_key_media_name_summary">Exposes a textfield on the Upload screen so you can send a title for your uploaded file to the media endpoint.</string>

