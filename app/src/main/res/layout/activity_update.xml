<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/update_root"
    android:layout_width="match_parent" android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:padding="@dimen/box_padding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:padding="@dimen/box_padding"
                    android:text="@string/url_update_info_label"
                    android:textColor="@color/textColor"
                    android:textStyle="bold"
                    android:textSize="@dimen/inputText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:padding="@dimen/box_padding"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/inputText"
                    android:id="@+id/url"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <TextView
                android:padding="@dimen/box_padding"
                android:text="@string/update_info"
                android:textColor="@color/textColor"
                android:textSize="@dimen/inputText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Switch
                android:padding="@dimen/box_padding"
                android:textColor="@color/textColor"
                android:id="@+id/postStatus"
                android:checked="true"
                android:text="@string/published"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:textColor="@color/textColor"
                android:textSize="@dimen/inputText"
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:ems="10"
                android:hint="@string/title"
                android:inputType="text" />

            <include layout="@layout/widget_body" />

        </LinearLayout>

    </ScrollView>

    <include layout="@layout/widget_progress_bar" />

</RelativeLayout>