<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/contact_root"
    android:layout_width="match_parent" android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <EditText
                android:textColor="@color/textColor"
                android:textSize="@dimen/inputText"
                android:id="@+id/contactName"
                android:hint="@string/contact_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp" />

            <EditText
                android:textColor="@color/textColor"
                android:textSize="@dimen/inputText"
                android:id="@+id/contactNickname"
                android:hint="@string/contact_nickname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp" />

            <EditText
                android:textColor="@color/textColor"
                android:textSize="@dimen/inputText"
                android:id="@+id/contactUrl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:hint="@string/contact_website"
                android:inputType="textUri" />

            <EditText
                android:textColor="@color/textColor"
                android:textSize="@dimen/inputText"
                android:id="@+id/contactPhoto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:hint="@string/contact_photo_hint"
                android:inputType="textUri" />

        </LinearLayout>
    </ScrollView>

    <include layout="@layout/widget_progress_bar" />

</RelativeLayout>