<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <Switch
            android:padding="@dimen/box_padding"
            android:textColor="@color/textColor"
            android:textSize="@dimen/inputText"
            android:id="@+id/postStatus"
            android:checked="true"
            android:text="@string/published"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Spinner
            android:id="@+id/rsvp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/rsvp_array"
            android:prompt="@string/rsvp_select" />

        <EditText
            android:textColor="@color/textColor"
            android:textSize="@dimen/inputText"
            android:id="@+id/url"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:hint="@string/url_hint"
            android:inputType="textUri" />

        <include layout="@layout/widget_body" />

        <MultiAutoCompleteTextView
            android:id="@+id/tags"
            android:textColor="@color/textColor"
            android:textSize="@dimen/inputText"
            android:hint="@string/tags"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/syndicationTargets"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </LinearLayout>

    </LinearLayout>
</ScrollView>