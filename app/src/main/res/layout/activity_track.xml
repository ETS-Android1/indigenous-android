<ScrollView android:id="@+id/scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:padding="@dimen/box_padding"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/title"
            android:textColor="@color/textColor"
            android:textSize="@dimen/inputText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:ems="10"
            android:hint="@string/track_title"
            android:inputType="text" />

        <Button
            android:textColor="@color/colorPrimary"
            style="?android:attr/borderlessButtonStyle"
            android:background="@color/listRowBackgroundColor"
            android:id="@+id/startNewTrack"
            android:text="@string/start_track"
            android:padding="@dimen/channel_list_item_padding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</ScrollView>