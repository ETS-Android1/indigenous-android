<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:id="@+id/track_list_item_row"
    android:layout_height="wrap_content"
    android:padding="@dimen/timeline_list_item_padding"
    android:orientation="vertical">

    <TextView
        android:id="@+id/track_list_label"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:textColor="@color/textColor"
        android:textSize="@dimen/timeline_list_item_text_size"
        android:layout_width="fill_parent" />

    <TextView
        android:id="@+id/track_list_meta"
        android:layout_height="wrap_content"
        android:textSize="@dimen/source_post_list_item_global"
        android:layout_marginBottom="5dp"
        android:textColor="@color/textColor"
        android:layout_width="fill_parent" />

    <LinearLayout
        android:paddingTop="5dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:background="@drawable/button_update"
            android:id="@+id/trackEdit"
            android:hint="@string/edit_track"
            android:textColorHint="@android:color/transparent"
            android:layout_width="@dimen/source_post_list_item_icon_size"
            android:layout_height="@dimen/source_post_list_item_icon_size" />

        <Button
            android:background="@drawable/button_send"
            android:id="@+id/trackPost"
            android:hint="@string/post_track"
            android:textColorHint="@android:color/transparent"
            android:layout_marginStart="@dimen/track_list_item_icon_margin_left"
            android:layout_width="@dimen/source_post_list_item_icon_size"
            android:layout_height="@dimen/source_post_list_item_icon_size" />

        <Button
            android:visibility="gone"
            android:background="@drawable/button_map"
            android:id="@+id/trackMap"
            android:hint="@string/map_track"
            android:textColorHint="@android:color/transparent"
            android:layout_marginStart="@dimen/track_list_item_icon_margin_left"
            android:layout_width="@dimen/source_post_list_item_icon_size"
            android:layout_height="@dimen/source_post_list_item_icon_size" />

        <Button
            android:background="@drawable/button_delete"
            android:id="@+id/trackDelete"
            android:hint="@string/delete_track"
            android:textColorHint="@android:color/transparent"
            android:layout_width="@dimen/source_post_list_item_icon_size"
            android:layout_height="@dimen/source_post_list_item_icon_size"
            android:layout_marginStart="@dimen/track_list_item_icon_margin_left" />

    </LinearLayout>

</LinearLayout>