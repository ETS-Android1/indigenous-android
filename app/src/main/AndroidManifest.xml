<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.indieweb.indigenous">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".post.NoteActivity"
            android:label="@string/add_note"
            android:parentActivityName=".channel.ChannelActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.indieweb.indigenous.channel.ChannelActivity" />
        </activity>
        <activity
            android:name=".post.ArticleActivity"
            android:label="@string/add_article"
            android:parentActivityName=".channel.ChannelActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.indieweb.indigenous.channel.ChannelActivity" />
        </activity>
        <activity
            android:name=".channel.ChannelActivity"
            android:label="@string/channels">
            <intent-filter android:label="@string/app_name">
                <action android:name="android.intent.action.SEND" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="text/plain" />
                <data android:mimeType="image/*" />
            </intent-filter>
        </activity>
        <activity
            android:name=".timeline.TimelineActivity"
            android:label="@string/timeline"
            android:parentActivityName=".channel.ChannelActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.indieweb.indigenous.channel.ChannelActivity" />
        </activity>
        <activity
            android:name=".post.LikeActivity"
            android:label="@string/add_like"
            android:parentActivityName=".channel.ChannelActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.indieweb.indigenous.channel.ChannelActivity" />
        </activity>
        <activity
            android:name=".timeline.TimelineImageActivity"
            android:label="@string/title_activity_timeline_image"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".post.ReplyActivity"
            android:label="@string/reply_to"
            android:parentActivityName=".channel.ChannelActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.indieweb.indigenous.channel.ChannelActivity" />

        </activity>
    </application>

</manifest>