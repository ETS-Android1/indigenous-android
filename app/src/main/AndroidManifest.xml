<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.indieweb.indigenous">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PostType.NoteActivity"
            android:label="@string/add_note"
            android:parentActivityName="com.indieweb.indigenous.Channel.ChannelActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.indieweb.indigenous.Channel.ChannelActivity" />
        </activity>
        <activity
            android:name=".PostType.ArticleActivity"
            android:label="@string/add_article"
            android:parentActivityName="com.indieweb.indigenous.Channel.ChannelActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.indieweb.indigenous.Channel.ChannelActivity" />
        </activity>
        <activity
            android:name=".Channel.ChannelActivity"
            android:label="@string/channels">
            <intent-filter android:label="@string/app_name">
                <action android:name="android.intent.action.SEND" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="text/plain" />
                <data android:mimeType="image/*" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Timeline.TimeLineActivity"
            android:label="@string/timeline"
            android:parentActivityName="com.indieweb.indigenous.Channel.ChannelActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.indieweb.indigenous.Channel.ChannelActivity" />
        </activity>
        <activity
            android:name=".PostType.LikeActivity"
            android:label="@string/add_like"
            android:parentActivityName="com.indieweb.indigenous.Channel.ChannelActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.indieweb.indigenous.Channel.ChannelActivity" />
        </activity>

    </application>

</manifest>